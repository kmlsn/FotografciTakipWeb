        <div class="info-card-text">
            @*<a href="#" class="d-flex align-items-center text-black-50 text-wrap">*@
                <span class="text-truncate text-truncate-sm d-inline-block text-wrap">
                    @ViewBag.Firma
                </span>
            @*</a>*@
            @*<span class="d-inline-block text-truncate text-truncate-sm">Toronto, Canada</span>*@
        </div>
    </div>
