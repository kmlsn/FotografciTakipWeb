
@{
    ViewBag.Title = "PayTROdemeOnay";
    Layout = "~/Areas/Otomasyon/Views/Shared/_Layout.cshtml";
}

<script src="https://www.paytr.com/js/iframeResizer.min.js"></script>
@if (ViewBag.status == "success")
{
    <iframe visible="true" src="@ViewBag.url" runat="server" id="paytriframe" frameborder="0" scrolling="no" style="width: 100%; "></iframe>
    <script>iFrameResize({}, '#paytriframe');</script>
}
else
{
    <h1>@ViewBag.status </h1>
}