                        </div>
                    </div>
                    <div class="modal-footer" style="padding-top:0px">
                        <button type="button" class="btn btn-primary btn-block" id="SiparisOnay" disabled>Siparişi Onayla</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Script
{
    <script src="~/Areas/Otomasyon/Content/js/requer.js"></script>
    <script>

        $(document).ready(function () {
            function ParaFormat(fiyat) {
                var para_sembol = "TL"
                var format = new Intl.NumberFormat('de-DE', {
                    style: 'currency',
                    currency: 'TRY',
                    minumumFractionDigits: 2
                })
                //return format.format(fiyat)
                return format.format(fiyat).replace('TRY', para_sembol)
            }
            var secim = 4;
            var OdemeTutar = $("#PaketTutar").val().replace(",", ".");
            console.log(OdemeTutar);
            $("#OnBilgilendirmeOdemeSekli").html("Kredi Kartı");
            $("#OnBilgilendirmeSure").html("12 Ay (1 Yıl)");
            var PaketTip = $("#PaketTip").val();
            if (PaketTip == "Lisans") {
                OdemeTutar = OdemeTutar * 12;
            }
            var SiparisTutar = OdemeTutar / 1.20;
            var Vergiler = SiparisTutar * 0.20;
            $("#SozlesmelerOnay").on('click', function () {
                if ($(this).is(':checked')) {
                    $("#SiparisOnay").removeAttr("disabled");
                }
                else {
                    $("#SiparisOnay").attr("disabled", "disabled");
                }
            });
            $("#SiparisTutari").html(accounting.formatMoney(SiparisTutar, "TL", 2, ".", ",", "%v %s"));
            $("#Vegiler").html(accounting.formatMoney(Vergiler, "TL", 2, ".", ",", "%v %s"));
            $("#OdenecekTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
            $("#OnBilgilendirmeTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
            $("#LisansSuresi").change(function () {
                secim = $(this).find("option:selected").val();
                PaketTutar = 0;
                if (secim == 1) {
                    OdemeTutar = $("#PaketTutar").val().replace(",", ".");
                    var SiparisTutar = OdemeTutar / 1.18;
                    var Vergiler = SiparisTutar * 0.18;
                    $("#SiparisTutari").html(accounting.formatMoney(SiparisTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#Vegiler").html(accounting.formatMoney(Vergiler, "TL", 2, ".", ",", "%v %s"));
                    $("#OdenecekTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#OnBilgilendirmeTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                }
                if (secim == 2) {
                    OdemeTutar = $("#PaketTutar").val().replace(",", ".");
                    OdemeTutar = OdemeTutar * 3;
                    var SiparisTutar = OdemeTutar / 1.18;
                    var Vergiler = SiparisTutar * 0.18;
                    $("#SiparisTutari").html(accounting.formatMoney(SiparisTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#Vegiler").html(accounting.formatMoney(Vergiler, "TL", 2, ".", ",", "%v %s"));
                    $("#OdenecekTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#OnBilgilendirmeTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                }
                if (secim == 3) {
                    OdemeTutar = $("#PaketTutar").val().replace(",", ".");
                    OdemeTutar = OdemeTutar * 6;
                    var SiparisTutar = OdemeTutar / 1.18;
                    var Vergiler = SiparisTutar * 0.18;
                    $("#SiparisTutari").html(accounting.formatMoney(SiparisTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#Vegiler").html(accounting.formatMoney(Vergiler, "TL", 2, ".", ",", "%v %s"));
                    $("#OdenecekTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#OnBilgilendirmeTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                }
                if (secim == 4) {
                    OdemeTutar = $("#PaketTutar").val().replace(",", ".");
                    OdemeTutar = OdemeTutar * 12;
                    var SiparisTutar = OdemeTutar / 1.18;
                    var Vergiler = SiparisTutar * 0.18;
                    $("#SiparisTutari").html(accounting.formatMoney(SiparisTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#Vegiler").html(accounting.formatMoney(Vergiler, "TL", 2, ".", ",", "%v %s"));
                    $("#OdenecekTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#OnBilgilendirmeTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                }
                if (secim == 5) {
                    OdemeTutar = $("#PaketTutar").val().replace(",", ".");
                    OdemeTutar = OdemeTutar * 24;
                    var SiparisTutar = OdemeTutar / 1.18;
                    var Vergiler = SiparisTutar * 0.18;
                    $("#SiparisTutari").html(accounting.formatMoney(SiparisTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#Vegiler").html(accounting.formatMoney(Vergiler, "TL", 2, ".", ",", "%v %s"));
                    $("#OdenecekTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#OnBilgilendirmeTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                }
                if (secim == 6) {
                    OdemeTutar = $("#PaketTutar").val().replace(",", ".");
                    OdemeTutar = OdemeTutar * 36;
                    var SiparisTutar = OdemeTutar / 1.18;
                    var Vergiler = SiparisTutar * 0.18;
                    $("#SiparisTutari").html(accounting.formatMoney(SiparisTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#Vegiler").html(accounting.formatMoney(Vergiler, "TL", 2, ".", ",", "%v %s"));
                    $("#OdenecekTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                    $("#OnBilgilendirmeTutar").html(accounting.formatMoney(OdemeTutar, "TL", 2, ".", ",", "%v %s"));
                }
                $("#OnBilgilendirmeSure").html($(this).find("option:selected").text());
            });
            $("#SiparisOnay").click(function () {
                var LisansSuresi = secim; // 1: 1AY, 2: 3AY, 3: 6AY, 4: 12AY(1YIL), 5: 24AY(2YIL), 6: 36AY(3YIL)
                var PaketAdi = $("#PaketAdi").val(); // Basit Lisans (60 TL/Ay), Standart Lisans (75 TL/Ay), Profesyonel Lisans (90 TL/Ay), 1.000 SMS, 5.000 SMS, 10.000 SMS, 25.000 SMS
                var PaketTip = $("#PaketTip").val();
                var SiparisNo = $("#SiparisNo").val();
                var PaketSatisFiyatId = $("#PaketSatisFiyatId").val();
                if (document.getElementById('KrediKartiRadio').checked) {
                    var KrediKartiData = new FormData();
                    KrediKartiData.append("LisansSuresi", LisansSuresi);
                    KrediKartiData.append("PaketAdi", PaketAdi);
                    KrediKartiData.append("PaketTip", PaketTip);
                    KrediKartiData.append("SiparisNo", SiparisNo);
                    KrediKartiData.append("PaketSatisFiyatId", PaketSatisFiyatId);
                    $.ajax({
                        type: "POST",
                        datatype: 'json',
                        data: KrediKartiData,
                        contentType: false,
                        processData: false,
                        url: "/Otomasyon/SatinAl/FKrediKartSiparisFormOlustur/",
                        success: function (data) {
                            if (data.Sonuc == false) {
                                alertify.set('notifier', 'delay', 5);
                                alertify.set('notifier', 'position', 'top-center');
                                alertify.error(data.Mesaj);
                            }
                            else if (data.Sonuc == true) {
                                alertify.set('notifier', 'delay', 3);
                                alertify.set('notifier', 'position', 'top-center');
                                alertify.success(data.Mesaj);
                                $("#iyzipay-checkout-form").html(data.forum);
                                $("#KrediKartiModal").modal("show");
                            }

                        },
                        error: function (err) {
                            alert("HATA");
                        }
                    });
                    //alert("Kredi Kartı");
                }
                else if (document.getElementById('BankaRadio').checked) {
                    var BankaHavaleData = new FormData();
                    BankaHavaleData.append("LisansSuresi", LisansSuresi);
                    BankaHavaleData.append("PaketAdi", PaketAdi);
                    BankaHavaleData.append("PaketTip", PaketTip);
                    BankaHavaleData.append("SiparisNo", SiparisNo);
                    BankaHavaleData.append("PaketSatisFiyatId", PaketSatisFiyatId);
                    $.ajax({
                        type: "POST",
                        datatype: 'json',
                        data: BankaHavaleData,
                        contentType: false,
                        processData: false,
                        url: "/Otomasyon/SatinAl/FBankaSiparisOnay/",
                        success: function (data) {
                            if (data.Sonuc == false) {
                                Swal.fire(
                                    {
                                        title: "Hata",
                                        html: "<p><h2 style='font-size:16px; color:red'><strong>Sipariş No : </strong>" + SiparisNo + "</h2></p><h2>" + data.Mesaj + "</h2>",
                                        type: "error",
                                        showCancelButton: false,
                                        confirmButtonText: "Tamam",
                                    }).then(function (result) {
                                        window.location.replace("/Otomasyon/Giris/GirisYap");
                                    });
                            }
                            else if (data.Sonuc == true) {
                                Swal.fire(
                                    {
                                        title: "Teşekkür Ederiz",
                                        html: "<p><h2 style='font-size:16px; color:red'><strong>Sipariş No : </strong>" + SiparisNo + "</h2></p><h2>" + data.Mesaj + "</h2>",
                                        type: "success",
                                        showCancelButton: false,
                                        confirmButtonText: "Tamam",
                                    }).then(function (result) {
                                        window.location.replace("/Otomasyon/Giris/GirisYap");
                                    });
                            }

                        },
                        error: function (err) {
                            alert("HATA");
                        }
                    });
                }



            });

            $('input:radio[name="OdemeYontemi"]').change(function () {
                if ($(this).val() == 'Kredi Kartı') {
                    $("#OnBilgilendirmeOdemeSekli").html("Kredi Kartı");
                }
                else if ($(this).val() == 'Banka') {
                    $("#OnBilgilendirmeOdemeSekli").html("Banka Havalesi/EFT");
                }
            });
        });
    </script>
}
