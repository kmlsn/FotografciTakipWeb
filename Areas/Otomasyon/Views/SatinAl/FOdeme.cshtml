    @*<div id="iyzipay-checkout-form" class="popup"></div>*@
    <div class="col-lg-4">
        <div id="panel-2" class="panel">
            <div class="panel-hdr">
                <h2>Sipariş Özeti </h2>
                <span class="text-right fw-700">Sipariş No: @ViewBag.SiparisNo</span>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <p class="text-primary text-center h2 mb-4">@ViewBag.PaketAdi</p>
                    @if (ViewBag.PaketTip == "Lisans")
                    {
                        <div class="form-group" id="LisansSuresi">
