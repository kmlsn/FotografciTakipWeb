                   <i class="fal fa-camera icon-stack-2x opacity-100 color-white "></i>
               </div>
               <span class="app-list-name">
                   @item.SubeAdi
               </span>
               </a>
            </li>*@
                }
                @if (ViewBag.KullaniciYetki)
                {
                <li>
                    <a href="#" class="app-list-item-sube hover-white SubeDegistir" data-id="0">
                        <span class="icon-stack">
                            <i class="base base-7 icon-stack-2x opacity-5 color-info-300"></i>
                            <i class="base base-16 icon-stack-3x opacity-100 color-primary-500"></i>
                            <i class="fal fa-camera icon-stack-2x opacity-100 color-white "></i>
                        </span>
                        <span class="app-list-name">
                            Tüm Şubeler
                        </span>
                    </a>
                </li>
                }
            </ul>
        </div>
